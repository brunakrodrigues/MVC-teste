
@using MVC_with_EF.Context.Models

@{
    List<Author> authors = (List<Author>)ViewData["authors"];

}
<div class="row">
    <div class="col-10"><h1>Autores</h1></div>
    <div class="col-2"><a href="Author/Create" class="btn btn-primary">Novo Autor</a></div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col" class="col-6">Nome</th>
            <th scope="col" class="col-2">Editar</th>
            <th scope="col" class="col-2">Deletar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in authors)
        {
            <tr>
                <th scope="row">@item.AuthorID</th>
                <td>@item.Name</td>
                <td><a href="Author/Create?AuthorID=@item.AuthorID"><i class="fas fa-edit"></i></a></td>
                <td><a href="Author/Delete?AuthorID=@item.AuthorID" ><i class="fas fa-trash-alt"></i></a></td>
            </tr>
        }
    </tbody>
</table>
 

 